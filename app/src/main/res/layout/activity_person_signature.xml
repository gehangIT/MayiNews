<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mayinews.mv.user.activity.PersonNickNameActivity">
    <RelativeLayout

        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_title_back_selector"
            android:layout_alignTop="@+id/tv_setting"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改签名"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_save"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gh_gray"/>
    <RelativeLayout
        android:paddingTop="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <EditText

            android:background="@null"
            android:id="@+id/et_signature"
            android:gravity="top"
            android:textSize="14dp"
            android:text="填写签名"
            android:maxLength="30"
            android:layout_width="match_parent"

            android:layout_height="match_parent" />
       <LinearLayout
           android:layout_marginBottom="4dp"
           android:layout_marginRight="4dp"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <TextView
           android:textSize="12dp"
           android:id="@+id/font_conunt"
           android:text="30"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:textSize="12dp"
           android:text="/30"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       </LinearLayout>
    </RelativeLayout>

</LinearLayout>
