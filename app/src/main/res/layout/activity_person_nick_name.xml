<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mayinews.mv.user.activity.PersonNickNameActivity">
    <RelativeLayout

        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_title_back_selector"
            android:layout_alignTop="@+id/tv_setting"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改昵称"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_save"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gh_gray"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:gravity="center_vertical"
            android:background="@null"
            android:id="@+id/et_nickName"
            android:textSize="14dp"
            android:text="填写昵称"

            android:maxLength="10"
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_clear"
            android:src="@drawable/mine_icon_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
