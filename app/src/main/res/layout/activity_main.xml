<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gh_gray"/>
    <RadioGroup
        android:paddingBottom="6dp"
        android:paddingTop="6dp"


    android:background="#ffffff"
    android:id="@+id/rg_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioButton

        android:id="@+id/rb_home"
        style="@style/MainButtonStyle"
        android:drawableTop="@drawable/main_selecor"
        android:text="@string/homepage" />
    <RadioButton
        android:id="@+id/rb_nice"
        style="@style/MainButtonStyle"
        android:drawableTop="@drawable/nice_selecor"
        android:text="@string/attention"
        />
    <!--<RadioButton-->

    <!--android:id="@+id/rb_discover"-->
    <!--style="@style/MainButtonStyle"-->
    <!--android:drawableTop="@drawable/discover_selecor"-->
    <!--android:text="发现"-->
    <!--/>-->

    <RadioButton

        android:id="@+id/rb_mine"
        style="@style/MainButtonStyle"
        android:drawableTop="@drawable/mine_selecor"
        android:text="@string/mine"
        />
</RadioGroup>


</LinearLayout>
