<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"

    >

    <TextView
        android:id="@+id/videoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="男子喝醉后说了一句话，一瞬间将让他一无所有" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/public_icon_time"
            android:drawablePadding="4dp"
            android:text="9小时前"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/play_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/public_icon_play"
            android:drawablePadding="4dp"
            android:text="2.0万"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/collection_selector"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="书藏"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shared"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/shared_selector"
            android:drawablePadding="4dp"
            android:text="分享"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/download"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/download_selector"
            android:drawablePadding="4dp"
            android:text="下载"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>